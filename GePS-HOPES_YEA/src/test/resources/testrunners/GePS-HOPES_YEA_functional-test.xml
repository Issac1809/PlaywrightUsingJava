<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="GePS-HOPES_YEA PR - Invoice Functional Test Suite" parallel="tests" thread-count="1" verbose="10"  >

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter2" />
<!--        <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener"/>-->
    </listeners>

    <test name="PS Catalog Test Context">
        <parameter name="type" value="PS"/>
        <parameter name="purchaseType" value="Catalog"/>
        <classes>
            <class name="com.source.context.CatalogTestContext"/>
        </classes>
    </test>

    <test name="PS Non-Catalog Test Context">
        <parameter name="type" value="PS"/>
        <parameter name="purchaseType" value="NonCatalog"/>
        <classes>
            <class name="com.source.context.NonCatalogTestContext"/>
        </classes>
    </test>

    <test name="Sales Catalog Test Context">
        <parameter name="type" value="Sales"/>
        <parameter name="purchaseType" value="Catalog"/>
        <classes>
            <class name="com.source.context.CatalogTestContext"/>
        </classes>
    </test>

    <test name="Sales Non-Catalog Test Context">
        <parameter name="type" value="Sales"/>
        <parameter name="purchaseType" value="NonCatalog"/>
        <classes>
            <class name="com.source.context.NonCatalogTestContext"/>
        </classes>
    </test>

</suite>